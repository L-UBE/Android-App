<PreferenceScreen android:tag="settings"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        app:key="hardCodedConnection"
        app:title="Hard-Coded Connection"
        app:summary="Enable Hard-Coded Bluetooth Device Connection"
        app:isPreferenceVisible="false"/>

    <SwitchPreference
        app:key="autoConnect"
        app:title="Auto-Connect"
        app:summary="Automatically Connect to Hard-Coded >/ Preferred Bluetooth Device on Startup"
        app:isPreferenceVisible="false"/>

    <EditTextPreference
        app:key="hardCodedDeviceMCU"
        app:title="Hard-Coded Cube Device"
        app:summary="Hard-Coded Cube Bluetooth Device"
        app:isPreferenceVisible="false"/>

    <EditTextPreference
        app:key="hardCodedDeviceSMG"
        app:title="Hard-Coded Smart-Glove Device"
        app:summary="Hard-Coded Smart-Glove Bluetooth Device"
        app:isPreferenceVisible="false"/>

    <ListPreference
        app:key="preferredDeviceMCU"
        app:title="Preferred Cube Device"
        app:summary="Preferred Bonded Cube Bluetooth Device"
        app:isPreferenceVisible="false"/>

    <ListPreference
        app:key="preferredDeviceSMG"
        app:title="Preferred Smart-Glove Device"
        app:summary="Preferred Bonded Smart-Glove Bluetooth Device"
        app:isPreferenceVisible="false"/>

    <SwitchPreference
        app:key="disableAnimation"
        app:title="Disable Animation"
        app:summary="Disable Startup Animation"/>

    <Preference
        app:key="restart"
        app:title="Restart"
        app:summary="Restart Android App"/>

</PreferenceScreen>