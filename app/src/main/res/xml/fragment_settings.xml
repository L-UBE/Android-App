<PreferenceScreen android:tag="settings"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        app:key="autoConnect"
        app:title="Auto-Connect"
        app:summary="Automatically Connect to Bluetooth Device on Startup"
        app:isPreferenceVisible="false"/>

    <ListPreference
        app:key="preferredDevice"
        app:title="Preferred Device"
        app:summary="Preferred Bluetooth Device"
        app:isPreferenceVisible="false"/>

    <SwitchPreference
        app:key="disableAnimation"
        app:title="Disable Animation"
        app:summary="Disable Startup Animation"/>

    <Preference
        app:key="restart"
        app:title="Restart"
        app:summary="Restart Android App"/>

</PreferenceScreen>