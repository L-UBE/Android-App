<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:weightSum="10">

    <EditText
        android:id="@+id/mathEquation"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textSize="50sp"
        android:hint="Equation"
        android:inputType="textPersonName"
        android:selectAllOnFocus="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="8"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="2"
            android:weightSum="4">

                <EditText
                    android:id="@+id/scale"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textSize="25sp"
                    android:hint="Scale"
                    android:inputType="date"
                    android:selectAllOnFocus="true" />

                <EditText
                    android:id="@+id/xoffset"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textSize="25sp"
                    android:hint="X-Offset"
                    android:inputType="date"
                    android:selectAllOnFocus="true" />

                <EditText
                    android:id="@+id/yoffset"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textSize="25sp"
                    android:hint="Y-Offset"
                    android:inputType="date"
                    android:selectAllOnFocus="true" />

                <EditText
                    android:id="@+id/zoffset"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textSize="25sp"
                    android:hint="Z-Offset"
                    android:inputType="date"
                    android:selectAllOnFocus="true" />

        </LinearLayout>

        <TableLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="0dp"
            android:layout_weight="3">

            <TableRow
                android:layout_height="0dp"
                android:layout_weight="1">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/e"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="e"
                    android:textSize="25dp"
                    android:textStyle="normal|bold"
                    android:background="@drawable/calc_operation_btn"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/pi"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="pi"
                    android:textSize="25dp"
                    android:textStyle="normal|bold"
                    android:background="@drawable/calc_operation_btn"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/par1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="("
                    android:textSize="25dp"
                    android:textStyle="normal|bold"
                    android:background="@drawable/calc_operation_btn"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/par2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text=")"
                    android:textSize="25dp"
                    android:textStyle="normal|bold"
                    android:background="@drawable/calc_operation_btn"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/power"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="^"
                    android:textSize="25dp"
                    android:textStyle="normal|bold"
                    android:background="@drawable/calc_operation_btn"/>

            </TableRow>

            <TableRow
                android:layout_height="0dp"
                android:layout_weight="1">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/sin"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="sin"
                    android:textSize="25dp"
                    android:textStyle="normal|bold"
                    android:background="@drawable/calc_function_btn"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/x"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="X"
                    android:textSize="25dp"
                    android:textStyle="normal|bold"
                    android:background="@drawable/calc_variable_btn"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/y"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Y"
                    android:textSize="25dp"
                    android:textStyle="normal|bold"
                    android:background="@drawable/calc_variable_btn"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/z"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="z"
                    android:textSize="25dp"
                    android:textStyle="normal|bold"
                    android:background="@drawable/calc_variable_btn"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/divide"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="/"
                    android:textSize="25dp"
                    android:textStyle="normal|bold"
                    android:background="@drawable/calc_operation_btn"/>

            </TableRow>

            <TableRow
                android:layout_height="0dp"
                android:layout_weight="1">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/cos"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="cos"
                    android:textSize="25dp"
                    android:textStyle="normal|bold"
                    android:background="@drawable/calc_function_btn"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/seven"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="7"
                    android:textSize="25dp"
                    android:textStyle="normal|bold"
                    android:background="@drawable/calc_num_btn"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/eight"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="8"
                    android:textSize="25dp"
                    android:textStyle="normal|bold"
                    android:background="@drawable/calc_num_btn"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/nine"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="9"
                    android:textSize="25dp"
                    android:textStyle="normal|bold"
                    android:background="@drawable/calc_num_btn"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/multiply"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="*"
                    android:textSize="25dp"
                    android:textStyle="normal|bold"
                    android:background="@drawable/calc_operation_btn"/>

            </TableRow>

            <TableRow
                android:layout_height="0dp"
                android:layout_weight="1">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/tan"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="tan"
                    android:textSize="25dp"
                    android:textStyle="normal|bold"
                    android:background="@drawable/calc_function_btn"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/four"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="4"
                    android:textSize="25dp"
                    android:textStyle="normal|bold"
                    android:background="@drawable/calc_num_btn"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/five"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="5"
                    android:textSize="25dp"
                    android:textStyle="normal|bold"
                    android:background="@drawable/calc_num_btn"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/six"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="6"
                    android:textSize="25dp"
                    android:textStyle="normal|bold"
                    android:background="@drawable/calc_num_btn"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/subtract"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="-"
                    android:textSize="25dp"
                    android:textStyle="normal|bold"
                    android:background="@drawable/calc_operation_btn"/>

            </TableRow>

            <TableRow
                android:layout_height="0dp"
                android:layout_weight="1">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/log"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="log"
                    android:textSize="25dp"
                    android:textStyle="normal|bold"
                    android:background="@drawable/calc_function_btn"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/one"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="1"
                    android:textSize="25dp"
                    android:textStyle="normal|bold"
                    android:background="@drawable/calc_num_btn"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/two"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="2"
                    android:textSize="25dp"
                    android:textStyle="normal|bold"
                    android:background="@drawable/calc_num_btn"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/three"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="3"
                    android:textSize="25dp"
                    android:textStyle="normal|bold"
                    android:background="@drawable/calc_num_btn"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/add"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="+"
                    android:textSize="25dp"
                    android:textStyle="normal|bold"
                    android:background="@drawable/calc_operation_btn"/>

            </TableRow>

            <TableRow
                android:layout_height="0dp"
                android:layout_weight="1">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/ln"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="ln"
                    android:textSize="25dp"
                    android:textStyle="normal|bold"
                    android:background="@drawable/calc_function_btn"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/zero"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="0"
                    android:textSize="25dp"
                    android:textStyle="normal|bold"
                    android:background="@drawable/calc_num_btn"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/decimal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="."
                    android:textSize="25dp"
                    android:textStyle="normal|bold"
                    android:background="@drawable/calc_num_btn"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/back"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="back"
                    android:textSize="25dp"
                    android:textStyle="normal|bold"
                    android:background="@drawable/calc_variable_btn"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/enter"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="enter"
                    android:textSize="25dp"
                    android:textStyle="normal|bold"
                    android:background="@drawable/calc_enter_btn"/>

            </TableRow>

        </TableLayout>

    </LinearLayout>

</LinearLayout>