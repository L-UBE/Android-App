<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/upload_layout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.GestureFragment"
    android:weightSum="8">

    <ImageButton
        android:id="@+id/preset1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:src="@drawable/ic_cube"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/preset2"
        app:layout_constraintBottom_toTopOf="@id/preset5"/>

    <ImageButton
        android:id="@+id/preset2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:src="@drawable/ic_sphere"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/preset1"
        app:layout_constraintEnd_toStartOf="@id/preset3"
        app:layout_constraintBottom_toTopOf="@id/preset6"/>

    <ImageButton
        android:id="@+id/preset3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:src="@drawable/send"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/preset2"
        app:layout_constraintEnd_toStartOf="@id/preset4"
        app:layout_constraintBottom_toTopOf="@id/preset7"/>

    <ImageButton
        android:id="@+id/preset4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:src="@drawable/ic_pyramid"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/preset3"
        app:layout_constraintBottom_toTopOf="@id/preset8"/>

    <ImageButton
        android:id="@+id/preset5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:src="@drawable/send"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@id/preset1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/preset6"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageButton
        android:id="@+id/preset6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:src="@drawable/send"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@id/preset2"
        app:layout_constraintStart_toEndOf="@+id/preset5"
        app:layout_constraintEnd_toStartOf="@id/preset7"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageButton
        android:id="@+id/preset7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:src="@drawable/send"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@id/preset3"
        app:layout_constraintStart_toEndOf="@id/preset6"
        app:layout_constraintEnd_toStartOf="@id/preset8"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageButton
        android:id="@+id/preset8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:src="@drawable/send"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@id/preset4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/preset7"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>