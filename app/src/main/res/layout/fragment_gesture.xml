<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="8"
        android:layout_weight="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_weight="2">

            <Button
                android:id="@+id/rotate_left_x"
                android:text="X"
                android:textSize="25sp"
                android:layout_margin="1dp"
                android:backgroundTint="@color/gray3"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/rotate_left_y"
                android:text="Y"
                android:textSize="25sp"
                android:layout_margin="1dp"
                android:backgroundTint="@color/gray3"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/rotate_left_z"
                android:text="Z"
                android:textSize="25sp"
                android:layout_margin="1dp"
                android:backgroundTint="@color/gray3"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <Button
            android:id="@+id/left"
            android:text="Translate Left"
            android:textSize="25sp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/gray2"
            android:layout_weight="4"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <Button
            android:id="@+id/backward"
            android:text="Backward"
            android:textSize="25sp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/gray3"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="7"
        android:layout_weight="4">

        <Button
            android:id="@+id/zoom_in"
            android:text="Zoom In"
            android:textSize="25sp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/gray5"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <Button
            android:id="@+id/up"
            android:text="Translate Up"
            android:textSize="25sp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/gray2"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <Button
            android:id="@+id/reset"
            android:text="Reset"
            android:textSize="25sp"
            android:backgroundTint="@color/black"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <Button
            android:id="@+id/down"
            android:text="Translate Down"
            android:textSize="25sp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/gray2"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <Button
            android:id="@+id/zoom_out"
            android:text="Zoom Out"
            android:textSize="25sp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/gray5"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="8"
        android:layout_weight="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_weight="2">

            <Button
                android:id="@+id/rotate_right_x"
                android:text="X"
                android:textSize="25sp"
                android:layout_margin="1dp"
                android:backgroundTint="@color/gray3"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/rotate_right_y"
                android:text="Y"
                android:textSize="25sp"
                android:layout_margin="1dp"
                android:backgroundTint="@color/gray3"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/rotate_right_z"
                android:text="Z"
                android:textSize="25sp"
                android:layout_margin="1dp"
                android:backgroundTint="@color/gray3"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <Button
            android:id="@+id/right"
            android:text="Translate Right"
            android:textSize="25sp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/gray2"
            android:layout_weight="4"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <Button
            android:id="@+id/forward"
            android:text="Forward"
            android:textSize="25sp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/gray3"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

    </LinearLayout>

</LinearLayout>