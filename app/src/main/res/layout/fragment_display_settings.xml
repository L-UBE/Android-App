<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="10"
        android:padding="8dp">

        <ToggleButton
            android:id="@+id/powerToggleButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_toggle"/>

        <SeekBar
            android:id="@+id/brightnessSeekBar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:max="9"
            android:progress="5"
            android:progressDrawable="@drawable/brightness"
            android:thumb="@drawable/thumb"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="3"
        android:weightSum="16"
        android:padding="8dp" >

        <Button
            android:id="@+id/button1"
            android:backgroundTint="@color/white"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button2"
            android:backgroundTint="@color/red"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button3"
            android:backgroundTint="@color/red_orange"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button4"
            android:backgroundTint="@color/orange"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button5"
            android:backgroundTint="@color/orange_yellow"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button6"
            android:backgroundTint="@color/yellow"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button7"
            android:backgroundTint="@color/yellow_green"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button8"
            android:backgroundTint="@color/green"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button9"
            android:backgroundTint="@color/cyan"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button10"
            android:backgroundTint="@color/cyan_blue"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button11"
            android:backgroundTint="@color/blue"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button12"
            android:backgroundTint="@color/purple_700"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button13"
            android:backgroundTint="@color/violet"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button14"
            android:backgroundTint="@color/pink"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button15"
            android:backgroundTint="@color/dark_pink"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button16"
            android:backgroundTint="@color/black"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="6"
        android:weightSum="3"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:weightSum="3"
            android:background="@color/purple_200">

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:weightSum="3"
            android:background="@color/purple_500">

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:weightSum="3"
            android:background="@color/purple_700">

        </LinearLayout>

    </LinearLayout>

</LinearLayout>